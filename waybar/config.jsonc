{
  "layer": "top",
  "position": "top",
  "height": 24, // Waybar height (to be removed for auto height)
  "spacing": 6, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": ["hyprland/workspaces", "custom/media"],
  "modules-center": [
    "cpu",
    "temperature",
    "hyprland/window",
    "memory",
    "network",
  ],
  "modules-right": ["tray", "pulseaudio", "backlight", "battery", "clock"],

  "hyprland/workspaces": {
    "persistent-workspaces": {
      "*": 5,
    },
    "format": "{icon}",
    "format-icons": {
      "active": "ÔÑë",
      "default": "Ó™º",
    },
  },
  "hyprland/window": {
    "min-length": 30,
    "max-length": 30,
    "format": "{}",
    "rewrite": {
      "": "Hyprland",
    },
  },
  "clock": {
    "timezone": "Asia/Tokyo",
    "format": "{:%Y/%m/%d %H:%M}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%H:%M}",
  },
  "cpu": {
    "min-length": 20,
    "max-length": 20,
    "interval": 5,
    "format": "{avg_frequency}GHz / {usage}% Ôãõ",
    "tooltip": false,
  },
  "memory": {
    "min-length": 20,
    "max-length": 20,
    "format": "{used:0.1f}GiB / {total:0.1f}GiB ÓøÖ",
    "interval": 10,
  },
  "temperature": {
    "min-length": 8,
    "max-length": 8,
    "hwmon-path": "/sys/devices/platform/coretemp.0/hwmon/hwmon5/temp1_input",
    "critical-threshold": 80,
    "format": "{temperatureC}¬∞C {icon}",
    "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
  },
  "backlight": {
    "format": "{percent}% {icon}",
    "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15,
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% Ôóß",
    "format-plugged": "{capacity}% Ôá¶",
    "format-alt": "{time} {icon}",
    "format-icons": ["Û∞Å∫", "Û∞Åº", "Û∞Åæ", "Û∞ÇÅ", "Û∞Åπ"],
  },
  "network": {
    "min-length": 8,
    "max-length": 8,
    "format-wifi": "{signalStrength}% Ôá´",
    "format-disconnected": "Disconnected ‚ö†",
    "tooltip": true,
    "tooltip-format": "{ifname}\n{essid}\n{ipaddr}\nÛ∞ïí {bandwidthUpBits}\nÛ∞áö {bandwidthDownBits}",
  },
  "tray": {
    "icon-size": 11,
    "spacing": 8,
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon}Ôäî",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî",
    "format-muted": "Ôö©",
    "format-icons": {
      "headphone": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
    },
    "on-click": "pavucontrol-qt",
  },
  "custom/media": {
    "format": "{icon} {text}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ÔÜº",
      "default": "üéú",
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null", // Script in resources folder
    // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
  },
  "custom/power": {
    "format": "‚èª ",
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
    "menu-actions": {
      "shutdown": "shutdown",
      "reboot": "reboot",
      "suspend": "systemctl suspend",
      "hibernate": "systemctl hibernate",
    },
  },
}
